{
  "info": {
    "name": "SlotSwapper API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{BASE_URL}}/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{BASE_URL}}/api/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{BASE_URL}}/api/auth/profile"
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{BASE_URL}}/api/events",
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Test Event\",\n    \"startTime\": \"2025-10-30T10:00:00Z\",\n    \"endTime\": \"2025-10-30T11:00:00Z\",\n    \"description\": \"Test event description\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Get All Events",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{BASE_URL}}/api/events"
          }
        },
        {
          "name": "Get Event by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{BASE_URL}}/api/events/{{eventId}}"
          }
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{BASE_URL}}/api/events/{{eventId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Updated Event\",\n    \"description\": \"Updated description\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Delete Event",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{BASE_URL}}/api/events/{{eventId}}"
          }
        }
      ]
    },
    {
      "name": "Swaps",
      "item": [
        {
          "name": "Create Swap Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{BASE_URL}}/api/swaps",
            "body": {
              "mode": "raw",
              "raw": "{\n    \"requestedEventId\": \"{{eventId}}\",\n    \"offeredEventId\": \"{{myEventId}}\",\n    \"message\": \"Would like to swap slots\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Get All Swap Requests",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{BASE_URL}}/api/swaps"
          }
        },
        {
          "name": "Accept Swap Request",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{BASE_URL}}/api/swaps/{{swapId}}/accept"
          }
        },
        {
          "name": "Reject Swap Request",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{BASE_URL}}/api/swaps/{{swapId}}/reject"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": "your-jwt-token"
    },
    {
      "key": "eventId",
      "value": "event-id"
    },
    {
      "key": "myEventId",
      "value": "my-event-id"
    },
    {
      "key": "swapId",
      "value": "swap-request-id"
    }
  ]
}
